{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "args": [
                "-B", "build",
                "-G", "Xcode", 
                // "-G", "'Unix Makefiles'", 
                // "-DCMAKE_BUILD_TYPE=Debug",
            ],
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "--target", "tests",
            ],
            "group": "build",
            "dependsOn": ["cmake"]
        },
        {
            "label": "run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "${workspaceRoot}/build/Debug/tests",
            "args": [
                "-regex", ".*",
            ],
            "group": "test",
            "dependsOn": ["build"]
        }
    ],
}